# AWS Configuration
aws_region   = "us-east-2"
environment  = "production"
project_name = "yourstruly"
domain_name  = "yourstruly.love"

# Database (start small, scale later)
db_instance_class    = "db.t4g.micro"
db_allocated_storage = 20
db_name              = "yourstruly"
db_username          = "yourstruly_admin"

# ECS (start small)
